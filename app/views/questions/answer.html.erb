<div class="container pt-5">
  <h1>Stupid Coaching</h1>
  <blockquote class="blockquote border-start border-5 ps-3 mt-3">
    <p><%= params[:second_user_story] %></p>
    <figcaption class="blockquote-footer">
      <cite title="Source Tittle">You</cite>
    </figcaption>
  </blockquote>

  <blockquote class="blockquote border-start border-5 ps-3 mt-3" style="background-color: #FFFFE1">
    <% if params[:second_user_story] == 'I am going to work'%>
        <p> Great! </p>
    <% elsif params[:second_user_story].end_with?('?') %>
        <p> Silly question, get dressed and go to work! </p>
    <% else %>
        <p> I don't care, get dressed and go to work! </p>
    <% end %>
    <figcaption class="blockquote-footer">
      <cite title="Source Tittle">Coach</cite>
    </figcaption>
  </blockquote>
  <%= link_to "Ask a new question", ask_path, {:style=>'text-decoration: none'}%>
</div>
